<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical"
        android:weightSum="1920" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="430" >

            <include layout="@layout/banner2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15px"
            android:layout_weight="1030" >

            <VideoView
                android:id="@+id/msg_f2_videov"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15px"
            android:layout_weight="430" >

            <include layout="@layout/banner3" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/msgret"
        android:layout_width="258px"
        android:layout_height="117px"
        android:layout_gravity="bottom"
        android:layout_marginLeft="822px"
        android:background="@drawable/msgreturn" />

</FrameLayout>