<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="186px"
    android:layout_height="279px"
    android:background="@drawable/book_item_bg"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="209px"
        android:layout_marginLeft="2.5px"
        android:layout_marginTop="1.5px" >

        <ImageView
            android:id="@+id/bookimg"
            android:layout_width="166px"
            android:layout_height="209px"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/bookauthor"
            android:layout_width="180px"
            android:layout_height="38px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="1px"
            android:layout_marginTop="171px"
            android:background="#99000000"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18px" />
    </FrameLayout>

    <TextView
        android:id="@+id/bookname"
        android:layout_width="match_parent"
        android:layout_height="56px"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20px" />

</LinearLayout>