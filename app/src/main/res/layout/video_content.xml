<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bj1"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ctitle2"
            android:layout_width="match_parent"
            android:layout_height="132px"
            android:background="@drawable/suzhijiaoyu_01" >

            <Button
                android:id="@+id/rmcontent_return"
                android:layout_width="132px"
                android:layout_height="132px"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/theall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/the1"
                android:layout_width="1015px"
                android:layout_height="347px"
                android:background="@drawable/ditu2"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/content_img_kc"
                    android:layout_width="230px"
                    android:layout_height="230px"
                    android:layout_margin="25px" />

                <LinearLayout
                    android:layout_width="400px"
                    android:layout_height="300px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14px"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/content_name_kc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/content_chief_kc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/content_intro_kc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textSize="28px" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/content_erweima_kc"
                    android:layout_width="230px"
                    android:layout_height="230px"
                    android:layout_margin="25px" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_marginTop="5px"
                android:background="@drawable/suzhijiaoyu_22"
                android:gravity="center_horizontal" />

            <ExpandableListView
                android:id="@+id/listView_kc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" android:layout_marginBottom="100px"
        android:orientation="vertical" >

        <Button
            android:id="@+id/remain_hide"
            android:layout_width="79px"
            android:layout_height="104px"
            android:layout_alignParentRight="true"
            android:background="@drawable/remain_hide"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remain_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom" android:layout_marginBottom="100px"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="258px"
            android:layout_height="104px"
            android:layout_alignParentRight="true"
            android:background="@drawable/remain_all" >

            <Button
                android:id="@+id/remain_all"
                android:layout_width="104px"
                android:layout_height="104px"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/remain_ret"
                android:layout_width="104px"
                android:layout_height="104px"
                android:layout_marginLeft="50px"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>