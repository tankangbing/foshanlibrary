<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/activebg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="132px"
            android:background="@drawable/yuedujingdian_01" >

            <Button
                android:id="@+id/bookt_back"
                android:layout_width="132px"
                android:layout_height="132px"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent" />
        </RelativeLayout>

        <GridView
            android:id="@+id/bookt_topgrid"
            android:layout_width="960px"
            android:layout_height="260px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:horizontalSpacing="25px"
            android:numColumns="4"
            android:verticalSpacing="20px" >
        </GridView>
        
        
        <RelativeLayout
            android:layout_width="960px"
            android:layout_height="60px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25px"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <Button
                android:id="@+id/ss_btn"
                android:layout_width="120px"
                android:layout_height="60px"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/more_btn"
                android:background="@drawable/yuedujingdian_19" />

            <EditText
                android:id="@+id/suosuo_edit"
                android:layout_width="350px"
                android:layout_height="60px"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/ss_btn"
                android:background="@drawable/sousuodikuang"
                android:ems="10"
                android:hint="请输入书名或作者查询"
                android:paddingLeft="10px"
                android:singleLine="true"
                android:textSize="24px" />

            <Button
                android:id="@+id/more_btn"
                android:layout_width="174px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/yuedujingdian_20" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="260px"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="260px"
                    android:layout_height="450px"
                    android:background="@drawable/ditu2"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/content_img"
                        android:layout_width="260px"
                        android:layout_height="317px"
                        android:layout_marginTop="20px" />

                    <TextView
                        android:id="@+id/content_bookname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20px"
                        android:textColor="#3e3a39"
                        android:textSize="15px" />

                    <TextView
                        android:id="@+id/content_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20px"
                        android:textColor="#727171"
                        android:textSize="13px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="260px"
                    android:layout_height="260px"
                    android:background="@drawable/ditu2" >

                    <ImageView
                        android:id="@+id/erweima"
                        android:layout_width="260px"
                        android:layout_height="260px"
                        android:padding="20px"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <Button
                    android:layout_width="260px"
                    android:layout_height="152px"
                    android:background="@drawable/xiazaidianzishu" />

                <Button
                    android:id="@+id/test_txt"
                    android:layout_width="260px"
                    android:layout_height="74px"
                    android:layout_marginTop="20px"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/test_pic"
                    android:layout_width="260px"
                    android:layout_height="74px"
                    android:layout_marginTop="20px"
                    android:background="@drawable/yuedujingdian23"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/backt"
                    android:layout_width="260px"
                    android:layout_height="74px"
                    android:layout_marginTop="20px"
                    android:background="@drawable/yuedujingdian_22" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="729px"
                android:layout_height="1160px"
                android:layout_marginLeft="25px"
                android:background="#f4f4f4"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ttitle"
                    android:layout_width="729px"
                    android:layout_height="65px" />

                <ScrollView
                    android:id="@+id/txt_sc"
                    android:layout_width="729px"
                    android:layout_height="1000px"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/ttxt_c"
                        android:layout_width="729px"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:padding="20px"
                        android:textSize="17px" />
                </ScrollView>

                <ImageView
                    android:id="@+id/tpic_c"
                    android:layout_width="729px"
                    android:layout_height="1000px"
                    android:padding="20px" />

                <LinearLayout
                    android:layout_width="729px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/uppage"
                        android:layout_width="76px"
                        android:layout_height="35px"
                        android:layout_marginLeft="178px"
                        android:background="@drawable/yuedujingdian_25" >
                    </Button>

                    <Button
                        android:id="@+id/downpage"
                        android:layout_width="76px"
                        android:layout_height="35px"
                        android:layout_marginLeft="220px"
                        android:background="@drawable/yuedujingdian_26" >
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100px"
        android:orientation="vertical" >

        <Button
            android:id="@+id/remain_hide"
            android:layout_width="79px"
            android:layout_height="104px"
            android:layout_alignParentRight="true"
            android:background="@drawable/remain_hide"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remain_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:layout_marginBottom="100px"
        android:orientation="vertical" 
         android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="258px"
            android:layout_height="104px"
            android:layout_alignParentRight="true"
            android:background="@drawable/remain_all"
           >
            <Button 
                android:id="@+id/remain_all"
                android:layout_width="104px"
                android:layout_height="104px"
                android:background="@android:color/transparent"
                />
             <Button 
                android:id="@+id/remain_ret"
                android:layout_width="104px"
                android:layout_height="104px"
                android:layout_marginLeft="50px"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>