<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/activebg"
        android:orientation="vertical"
        android:weightSum="1884" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="132"
            android:background="@drawable/xiaoyuanhuodong_01"
            android:orientation="horizontal"
            android:weightSum="1080" >

            <Button
                android:id="@+id/act_contentback"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="132"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1752"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1752" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="90" >

                <TextView
                    android:id="@+id/act_ctitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="400px"
                    android:layout_marginTop="50px"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/act_ccreit"
                    android:layout_width="124px"
                    android:layout_height="35px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="44px"
                    android:background="@drawable/xuefeng"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="22px" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="940px"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="270"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/act_cimg"
                    android:layout_width="228px"
                    android:layout_height="228px"
                    android:padding="5px"
                    android:background="@drawable/active_imgbg" />

                <LinearLayout
                    android:layout_width="610px"
                    android:layout_height="230px"
                    android:layout_marginLeft="100px"
                    android:layout_marginTop="13px"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="480px"
                        android:layout_height="230px"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/act_cbegin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14px"
                            android:textSize="17px" />

                        <TextView
                            android:id="@+id/act_cend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14px"
                            android:textSize="17px" />

                        <TextView
                            android:id="@+id/act_cunit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14px"
                            android:textSize="17px" />

                        <TextView
                            android:id="@+id/act_ctype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14px"
                            android:background="#3c9a63"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:textSize="17px" />

                        <TextView
                            android:id="@+id/act_cnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="27px"
                            android:textSize="17px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="130px"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="31px"
                            android:gravity="center_horizontal"
                            android:text="扫码报名"
                            android:textSize="15px" />

                        <ImageView
                            android:id="@+id/act_erweima"
                            android:layout_width="128px"
                            android:layout_height="128px"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="报名截至"
                            android:textSize="15px" />

                        <TextView
                            android:id="@+id/act_ceend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#3c9a63"
                            android:textSize="15px" />

                        <TextView
                            android:id="@+id/act_cenum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15px" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="940px"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="92"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27px"
                    android:text="活动评价："
                    android:textSize="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="27px"
                    android:text="好评:"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/rate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="27px"
                    android:textSize="20px" />

                <ProgressBar
                    android:id="@+id/goodp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="150px"
                    android:layout_height="24px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15px"
                    android:progressDrawable="@drawable/progress" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35px"
                    android:layout_marginTop="27px"
                    android:text="中评:"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/rate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="27px"
                    android:textSize="20px" />

                <ProgressBar
                    android:id="@+id/midp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="150px"
                    android:layout_height="24px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15px"
                    android:progressDrawable="@drawable/progress" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35px"
                    android:layout_marginTop="27px"
                    android:text="差评:"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/rate3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="27px"
                    android:textSize="20px" />

                <ProgressBar
                    android:id="@+id/badp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="150px"
                    android:layout_height="24px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15px"
                    android:progressDrawable="@drawable/progress" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="940px"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="680"
                android:background="@drawable/xiaoyuanhuodong_03"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="90px" />

                <ScrollView
                    android:layout_width="905px"
                    android:layout_height="550px" >

                    <TextView
                        android:id="@+id/act_cintro"
                        android:layout_width="870px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35px"
                        android:textSize="29px" />
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="940px"
                android:layout_height="0dp"
                android:layout_marginTop="20px"
                android:layout_weight="600"
                android:background="@drawable/xiaoyuanhuodong_04" >

                <com.fy.tool.XListView
                    android:id="@+id/active_clist"
                    android:layout_width="900px"
                    android:layout_height="500px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="100px"
                    android:divider="#9fa0a0"
                    android:dividerHeight="1px" >
                </com.fy.tool.XListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100px"
        android:orientation="vertical" >

        <Button
            android:id="@+id/remain_hide"
            android:layout_width="79px"
            android:layout_height="104px"
            android:layout_alignParentRight="true"
            android:background="@drawable/remain_hide"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remain_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:layout_marginBottom="100px"
        android:orientation="vertical" 
         android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="258px"
            android:layout_height="104px"
            android:layout_alignParentRight="true"
            android:background="@drawable/remain_all"
           >
            <Button 
                android:id="@+id/remain_all"
                android:layout_width="104px"
                android:layout_height="104px"
                android:background="@android:color/transparent"
                />
             <Button 
                android:id="@+id/remain_ret"
                android:layout_width="104px"
                android:layout_height="104px"
                android:layout_marginLeft="50px"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>