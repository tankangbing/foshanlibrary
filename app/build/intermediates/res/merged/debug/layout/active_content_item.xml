<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginTop="8px" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/touxiang_07" />

        <TextView
            android:id="@+id/act_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/act_username"
            android:layout_alignBottom="@+id/act_username"
            android:layout_alignParentRight="true"
            android:textColor="#00a29a"
            android:textSize="23px" />

        <TextView
            android:id="@+id/act_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/imageView1"
            android:textColor="#000000"
            android:textSize="23px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/act_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginTop="5px"
        android:textColor="#000000"
        android:textSize="29px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="5px"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/act_cimg1"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginLeft="10px" />

        <ImageView
            android:id="@+id/act_cimg2"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginLeft="10px" />

        <ImageView
            android:id="@+id/act_cimg3"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginLeft="10px" />

        <ImageView
            android:id="@+id/act_cimg4"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginLeft="10px" />

        <ImageView
            android:id="@+id/act_cimg5"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginLeft="10px" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5px"
            android:textColor="#9fa0a0"
            android:textSize="18px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px" />
    </RelativeLayout>

</LinearLayout>