<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/activebg"
        android:orientation="vertical"
        android:weightSum="1884" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="132"
            android:background="@drawable/zhichangxinxi_01"
            android:orientation="horizontal"
            android:weightSum="1080" >

            <Button
                android:id="@+id/work_contentback"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="132"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1752"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1752" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="90" >

                <TextView
                    android:id="@+id/work_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="400px"
                    android:layout_marginTop="50px"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="124px"
                    android:layout_height="35px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="44px"
                    android:gravity="center"
                    android:textSize="22px" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="940px"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="270"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/work_cimg"
                    android:layout_width="228px"
                    android:layout_height="228px"
                    android:background="@drawable/zhichangxinxi3"
                    android:padding="5px" />

                <LinearLayout
                    android:layout_width="610px"
                    android:layout_height="230px"
                    android:layout_marginLeft="100px"
                    android:layout_marginTop="13px"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="480px"
                        android:layout_height="230px"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/work_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14px"
                            android:textSize="23px" />

                        <TextView
                            android:id="@+id/work_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14px"
                            android:textSize="23px" />

                        <TextView
                            android:id="@+id/work_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14px"
                            android:textSize="23px" />

                        <TextView
                            android:id="@+id/work_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24px"
                            android:textSize="23px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="130px"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="31px"
                            android:gravity="center_horizontal"
                            android:text="扫码收藏"
                            android:textSize="15px" />

                        <ImageView
                            android:id="@+id/work_erweima"
                            android:layout_width="128px"
                            android:layout_height="128px"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="940px"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="92"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="940px"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1100"
                android:background="@drawable/zhichangxinxi_07" >

                <ScrollView
                    android:layout_width="870px"
                    android:layout_height="900px"
                    android:layout_marginLeft="35px"
                    android:layout_marginTop="110px" >

                    <TextView
                        android:id="@+id/work_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30px" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

  
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" android:layout_marginBottom="100px"
        android:orientation="vertical" >

        <Button
            android:id="@+id/remain_hide"
            android:layout_width="79px"
            android:layout_height="104px"
            android:layout_alignParentRight="true"
            android:background="@drawable/remain_hide"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remain_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom" android:layout_marginBottom="100px"
        android:orientation="vertical" 
         android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="258px"
            android:layout_height="104px"
            android:layout_alignParentRight="true"
            android:background="@drawable/remain_all"
           >
            <Button 
                android:id="@+id/remain_all"
                android:layout_width="104px"
                android:layout_height="104px"
                android:background="@android:color/transparent"
                />
             <Button 
                android:id="@+id/remain_ret"
                android:layout_width="104px"
                android:layout_height="104px"
                android:layout_marginLeft="50px"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
    </RelativeLayout>



</FrameLayout>