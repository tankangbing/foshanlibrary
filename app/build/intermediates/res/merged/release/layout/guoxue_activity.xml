<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1884" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="132"
            android:background="@drawable/guoxue_title"
            android:weightSum="1080" >

            <Button
                android:id="@+id/guoxue_backbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="132"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/guoxue_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1752"
            android:background="@drawable/guoxue_bgrehe1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="74px"
                android:layout_marginTop="42px"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/guoxue_btn1"
                    android:layout_width="245px"
                    android:layout_height="70px"
                    android:background="@drawable/guoxue_rehe1_btn1_on" />

                <Button
                    android:id="@+id/guoxue_btn2"
                    android:layout_width="245px"
                    android:layout_height="70px"
                    android:layout_marginLeft="83px"
                    android:background="@drawable/guoxue_rehe1_btn2_off" />

                <Button
                    android:id="@+id/guoxue_btn3"
                    android:layout_width="245px"
                    android:layout_height="70px"
                    android:layout_marginLeft="83px"
                    android:background="@drawable/guoxue_rehe1_btn3_off" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/guoxue_pic"
                android:layout_width="931px"
                android:layout_height="1557px"
                android:layout_marginTop="34px"
                android:orientation="vertical"
                android:visibility="gone" >

                <include layout="@layout/guoxue_viewpager" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/guoxue_pic2"
                android:layout_width="920px"
                android:layout_height="1557px"
                android:layout_marginTop="41px"
                android:orientation="vertical"
                android:background="@drawable/xuanchuanshipin_bg"
                android:visibility="visible" >
                
                <VideoView
                    android:id="@+id/hvideo"
                    android:layout_width="806px"
                    android:layout_height="657px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="292px" />
            </LinearLayout>
            
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100px"
        android:orientation="vertical" >

        <Button
            android:id="@+id/remain_hide"
            android:layout_width="79px"
            android:layout_height="104px"
            android:layout_alignParentRight="true"
            android:background="@drawable/remain_hide"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remain_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="100px"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="258px"
            android:layout_height="104px"
            android:layout_alignParentRight="true"
            android:background="@drawable/remain_all" >

            <Button
                android:id="@+id/remain_all"
                android:layout_width="104px"
                android:layout_height="104px"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/remain_ret"
                android:layout_width="104px"
                android:layout_height="104px"
                android:layout_marginLeft="50px"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>