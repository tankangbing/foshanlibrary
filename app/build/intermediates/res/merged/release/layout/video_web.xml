<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="132px"
            android:background="@drawable/vtitle" >

            <Button
                android:id="@+id/video_webback"
                android:layout_width="132px"
                android:layout_height="132px"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent" />
        </RelativeLayout>

        <WebView
            android:id="@+id/net_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100px"
        android:orientation="vertical" >

        <Button
            android:id="@+id/remain_hide"
            android:layout_width="79px"
            android:layout_height="104px"
            android:layout_alignParentRight="true"
            android:background="@drawable/remain_hide"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remain_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="258px"
            android:layout_height="104px"
            android:layout_marginBottom="100px"
            android:layout_alignParentRight="true"
            android:background="@drawable/remain_all" >

            <Button
                android:id="@+id/remain_all"
                android:layout_width="104px"
                android:layout_height="104px"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/remain_ret"
                android:layout_width="104px"
                android:layout_height="104px"
                android:layout_marginLeft="50px"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>