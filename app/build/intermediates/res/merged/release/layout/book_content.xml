<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/activebg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="132px"
            android:background="@drawable/yuedujingdian_01" >

            <Button
                android:id="@+id/bookc_back"
                android:layout_width="132px"
                android:layout_height="132px"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent" />
        </RelativeLayout>

        <GridView
            android:id="@+id/bookc_topgrid"
            android:layout_width="960px"
            android:layout_height="260px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:horizontalSpacing="25px"
            android:numColumns="4"
            android:verticalSpacing="20px" >
        </GridView>

        <RelativeLayout
            android:layout_width="960px"
            android:layout_height="60px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25px"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <Button
                android:id="@+id/ss_btn"
                android:layout_width="120px"
                android:layout_height="60px"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/more_btn"
                android:background="@drawable/yuedujingdian_19" />

            <EditText
                android:id="@+id/suosuo_edit"
                android:layout_width="350px"
                android:layout_height="60px"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/ss_btn"
                android:background="@drawable/sousuodikuang"
                android:ems="10"
                android:hint="请输入书名或作者查询"
                android:paddingLeft="10px"
                android:singleLine="true"
                android:textSize="24px" />

            <Button
                android:id="@+id/more_btn"
                android:layout_width="174px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/yuedujingdian_20" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="260px"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="260px"
                    android:layout_height="450px"
                    android:background="@drawable/ditu2"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/content_img"
                        android:layout_width="260px"
                        android:layout_height="317px"
                        android:layout_marginTop="20px" />

                    <TextView
                        android:id="@+id/content_bookname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20px"
                        android:textColor="#3e3a39"
                        android:textSize="15px" />

                    <TextView
                        android:id="@+id/content_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20px"
                        android:textColor="#727171"
                        android:textSize="13px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="260px"
                    android:layout_height="260px"
                    android:background="@drawable/ditu2" >

                    <ImageView
                        android:id="@+id/erweima"
                        android:layout_width="260px"
                        android:layout_height="260px"
                        android:padding="20px"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <Button
                    android:layout_width="260px"
                    android:layout_height="52px"
                    android:text="↑用智泉教育拍一拍我↑"
                    android:textColor="#c45a12"
                    android:textSize="15px" />

                <Button
                    android:id="@+id/test_pic"
                    android:layout_width="260px"
                    android:layout_height="74px"
                    android:layout_marginTop="10px"
                    android:background="@drawable/yuedujingdian23" />

                <Button
                    android:id="@+id/bookc_ret"
                    android:layout_width="260px"
                    android:layout_height="74px"
                    android:layout_marginTop="20px"
                    android:background="@drawable/yuedujingdian_22" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="729px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:background="@drawable/yuedujingdian_23"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="729px"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="729px"
                        android:layout_height="85px" />

                    <ScrollView
                        android:layout_width="729px"
                        android:layout_height="365px" >

                        <TextView
                            android:id="@+id/content_intro"
                            android:layout_width="689px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textSize="17px" />
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="729px"
                    android:layout_height="814px"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="729px"
                        android:layout_height="75px"
                        android:layout_marginTop="20px" />

                    <ScrollView
                        android:layout_width="729px"
                        android:layout_height="710px"
                        android:layout_marginTop="20px" >

                        <TextView
                            android:id="@+id/content_dir"
                            android:layout_width="689px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:padding="20px"
                            android:textSize="17px" />
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100px"
        android:orientation="vertical" >

        <Button
            android:id="@+id/remain_hide"
            android:layout_width="79px"
            android:layout_height="104px"
            android:layout_alignParentRight="true"
            android:background="@drawable/remain_hide"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remain_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:layout_marginBottom="100px"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="258px"
            android:layout_height="104px"
            android:layout_alignParentRight="true"
            android:background="@drawable/remain_all" >

            <Button
                android:id="@+id/remain_all"
                android:layout_width="104px"
                android:layout_height="104px"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/remain_ret"
                android:layout_width="104px"
                android:layout_height="104px"
                android:layout_marginLeft="50px"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>