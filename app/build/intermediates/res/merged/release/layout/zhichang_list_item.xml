<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1080" >

        <ImageView
            android:id="@+id/zhichang_list_img"
            android:layout_width="0dp"
            android:layout_height="160px"
            android:layout_weight="182"
            android:padding="5px"
            android:background="@drawable/zhichangxinxi3"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180px"
            android:layout_marginLeft="10dp"
            android:layout_weight="814"
            android:background="@drawable/zhichangxinxi_2"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="40px"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/zhichang_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="25px" />

            <TextView
                android:id="@+id/zhichang_list_companyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="18px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="薪资:"
                    android:textColor="#000000"
                    android:textSize="18px" />

                <TextView
                    android:id="@+id/zhichang_list_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#E60011"
                    android:textSize="19px" />

                <TextView
                    android:id="@+id/zhichang_list_paytime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/月"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textSize="18px" />
            </LinearLayout>

            <TextView
                android:id="@+id/zhichang_list_peoplenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="招聘人数"
                android:textColor="#000000"
                android:textSize="18px" />

            <TextView
                android:id="@+id/zhichang_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="发布日期"
                android:textColor="#000000"
                android:textSize="18px" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>